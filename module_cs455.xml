<?xml version="1.0" encoding="UTF-8"?>
<project name="module_cs455" default="compile.module.cs455">
  <dirname property="module.cs455.basedir" file="${ant.file.module_cs455}"/>
  
  <property name="module.jdk.home.cs455" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cs455" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cs455" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cs455" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="cs455.output.dir" value="${module.cs455.basedir}/target/classes"/>
  <property name="cs455.testoutput.dir" value="${module.cs455.basedir}/target/test-classes"/>
  
  <path id="cs455.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cs455.module.production.classpath">
    <path refid="${module.jdk.classpath.cs455}"/>
    <path refid="library.maven:_com.massisframework:j-text-utils:0.3.4.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_au.com.bytecode:opencsv:2.4.classpath"/>
  </path>
  
  <path id="cs455.runtime.production.module.classpath">
    <pathelement location="${cs455.output.dir}"/>
    <path refid="library.maven:_com.massisframework:j-text-utils:0.3.4.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_au.com.bytecode:opencsv:2.4.classpath"/>
  </path>
  
  <path id="cs455.module.classpath">
    <path refid="${module.jdk.classpath.cs455}"/>
    <pathelement location="${cs455.output.dir}"/>
    <path refid="library.maven:_com.massisframework:j-text-utils:0.3.4.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_au.com.bytecode:opencsv:2.4.classpath"/>
  </path>
  
  <path id="cs455.runtime.module.classpath">
    <pathelement location="${cs455.testoutput.dir}"/>
    <pathelement location="${cs455.output.dir}"/>
    <path refid="library.maven:_com.massisframework:j-text-utils:0.3.4.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:21.0.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_au.com.bytecode:opencsv:2.4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.cs455">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cs455">
    <patternset refid="excluded.from.module.cs455"/>
  </patternset>
  
  <path id="cs455.module.sourcepath">
    <dirset dir="${module.cs455.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cs455" depends="compile.module.cs455.production,compile.module.cs455.tests" description="Compile module cs455"/>
  
  <target name="compile.module.cs455.production" depends="register.custom.compilers" description="Compile module cs455; production classes">
    <mkdir dir="${cs455.output.dir}"/>
    <javac2 destdir="${cs455.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cs455}/javac">
      <compilerarg line="${compiler.args.cs455}"/>
      <bootclasspath refid="cs455.module.bootclasspath"/>
      <classpath refid="cs455.module.production.classpath"/>
      <src refid="cs455.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cs455"/>
    </javac2>
    
    <copy todir="${cs455.output.dir}">
      <fileset dir="${module.cs455.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cs455.tests" depends="register.custom.compilers,compile.module.cs455.production" description="compile module cs455; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cs455" description="cleanup module">
    <delete dir="${cs455.output.dir}"/>
    <delete dir="${cs455.testoutput.dir}"/>
  </target>
</project>